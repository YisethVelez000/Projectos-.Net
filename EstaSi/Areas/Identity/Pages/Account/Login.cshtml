@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0 text-center">Inicio de Sesion</h4>
                </div>
                <div class="card-body">
                    <section>
                        <form id="account" method="post">
                            <div class="form-group mb-3">
                                <label asp-for="Input.Email" class="form-label">Correo</label>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Input.Password" class="form-label">Contraseña</label>
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-check mb-3">
                                <label asp-for="Input.RememberMe" class="form-check-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <div class="d-grid gap-2 text-center">
                                <button id="login-submit" type="submit" class="btn btn-primary">Iniciar Sesion</button>
                            </div>
                            <div class="mt-3 text-center text-black">
                                <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                            </div>
                            <div class="mt-3 text-center text-black">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse</a>
                            </div>
                            <div class="mt-3 text-center text-black">
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar correo de confirmacion</a>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
