@model Usuarios.Models.Role

@{
    ViewData["Title"] = "Create";
}



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card rounded custom-card">
                <h4 class="text-center custom-title"> Roles</h4>
                <div clas="card-body">
                    <form id="miFormulario" asp-action="Create" onsubmit="return validateForm()">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="NombreRol" class="control-label">Nombre Rol</label>
                            <input asp-for="NombreRol" class="form-control" id="nombreRol"/>
                            <span asp-validation-for="NombreRol" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EstadoRol" class="control-label">Estado Rol</label>
                            <input asp-for="EstadoRol" class="form-control" id="estadoRol" />
                            <span asp-validation-for="EstadoRol" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
         
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
